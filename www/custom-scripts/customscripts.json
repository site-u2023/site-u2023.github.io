{
  "scripts": [
    {
      "id": "adguardhome",
      "name": "AdGuard Home",
      "class": "tr-tui-customscript-adguardhome",
      "description": "Network-wide ad blocking DNS server",
      "script": "adguardhome.sh",
      "requirements": {
        "minMemoryMB": 50,
        "minFlashMB": 100
      },
      "inputs": [
        {
          "id": "username",
          "type": "text",
          "label": "tr-tui-customscript-username",
          "default": "admin",
          "envVar": "AGH_USER"
        },
        {
          "id": "password",
          "type": "password",
          "label": "tr-tui-customscript-password",
          "default": "password",
          "minlength": 8,
          "envVar": "AGH_PASS"
        },
        {
          "id": "web_port",
          "type": "number",
          "label": "tr-tui-customscript-webport",
          "default": "8000",
          "envVar": "WEB_PORT"
        },
        {
          "id": "dns_port",
          "type": "number",
          "label": "tr-tui-customscript-dnsport",
          "default": "53",
          "envVar": "DNS_PORT"
        },
        {
          "id": "lan_addr",
          "type": "text",
          "label": "tr-tui-customscript-lanaddr",
          "default": "192.168.1.1",
          "envVar": "LAN_ADDR",
          "hidden": true
        }
      ],
      "options": [
        {
          "id": "openwrt",
          "label": "tr-tui-customscript-install-openwrt",
          "args": "openwrt",
          "requireNotInstalled": true,
          "reboot": true
        },
        {
          "id": "official",
          "label": "tr-tui-customscript-install-official",
          "args": "official",
          "requireNotInstalled": true,
          "reboot": true
        },
        {
          "id": "change-credentials",
          "label": "tr-tui-customscript-change-credentials",
          "args": "change-credentials",
          "requireInstalled": true,
          "reboot": false,
          "skipInputs": true
        },
        {
          "id": "remove",
          "label": "tr-tui-customscript-remove",
          "args": "remove auto",
          "skipInputs": true,
          "requireInstalled": true,
          "reboot": true
        }
      ]
    }
  ]
}
