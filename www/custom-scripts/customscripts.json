{
  "scripts": [
    {
      "id": "adguardhome",
      "name": "AdGuard Home",
      "class": "tr-tui-customscript-adguardhome",
      "description": "Network-wide ad blocking DNS server",
      "script": "adguardhome.sh",
      "requirements": {
        "minMemory": "20",
        "minFlash": "25",
        "recommendedMemory": "50",
        "recommendedFlash": "100"
      },
      "binaryPaths": ["/usr/bin/AdGuardHome", "/etc/AdGuardHome/AdGuardHome"],
      "yamlPaths": [
        "/etc/adguardhome/adguardhome.yaml",
        "/etc/adguardhome/AdGuardHome.yaml",
        "/etc/AdGuardHome/AdGuardHome.yaml"
      ],
      "inputs": [
        {
          "id": "username",
          "label": "tr-tui-customscript-username",
          "envVar": "AGH_USER",
          "default": "admin"
        },
        {
          "id": "password",
          "label": "tr-tui-customscript-password",
          "envVar": "AGH_PASS",
          "default": "admin1234",
          "minlength": "8"
        },
        {
          "id": "web_port",
          "label": "tr-tui-customscript-webport",
          "envVar": "WEB_PORT",
          "default": "3000",
          "validation": {
            "type": "port",
            "min": "1",
            "max": "65535"
          }
        }
      ],
      "options": [
        {
          "id": "openwrt",
          "label": "tr-tui-customscript-adguardhome-openwrt",
          "envVars": {
            "INSTALL_MODE": "openwrt"
          },
          "requiredInputs": ["username", "password", "web_port"],
          "requireNotInstalled": "true",
          "requiresConfirmation": "true"
        },
        {
          "id": "official",
          "label": "tr-tui-customscript-adguardhome-official",
          "envVars": {
            "INSTALL_MODE": "official"
          },
          "requiredInputs": ["username", "password", "web_port"],
          "requireNotInstalled": "true",
          "requiresConfirmation": "true"
        },
        {
          "id": "change-credentials",
          "label": "tr-tui-customscript-adguardhome-change-credentials",
          "envVars": {
            "UPDATE_CREDENTIALS": "1"
          },
          "requiredInputs": ["username", "password", "web_port"],
          "requireInstalled": "true",
          "requiresConfirmation": "false"
        },
        {
          "id": "remove",
          "label": "tr-tui-customscript-adguardhome-remove",
          "envVars": {
            "REMOVE_MODE": "auto"
          },
          "skipInputs": "true",
          "requireInstalled": "true",
          "requiresConfirmation": "true"
        }
      ]
    },
    {
      "id": "filebrowser",
      "name": "File Browser",
      "class": "tr-tui-customscript-filebrowser",
      "description": "Web-based file manager for OpenWrt",
      "script": "filebrowser.sh",
      "binaryPaths": ["/usr/bin/filebrowser"],
      "inputs": [
        {
          "id": "username",
          "label": "tr-tui-customscript-username",
          "envVar": "FB_USER",
          "default": "admin"
        },
        {
          "id": "password",
          "label": "tr-tui-customscript-password",
          "envVar": "FB_PASS",
          "default": "admin12345678",
          "minlength": "12"
        },
        {
          "id": "web_port",
          "label": "tr-tui-customscript-webport",
          "envVar": "FB_PORT",
          "default": "8080",
          "validation": {
            "type": "port",
            "min": "1",
            "max": "65535"
          }
        },
        {
          "id": "root_path",
          "label": "tr-tui-customscript-rootpath",
          "envVar": "FB_ROOT",
          "default": "/",
          "hidden": "true"
        }
      ],
      "options": [
        {
          "id": "install",
          "label": "tr-tui-customscript-filebrowser-install",
          "requiredInputs": ["username", "password", "web_port", "root_path"],
          "requireNotInstalled": "true",
          "requiresConfirmation": "true"
        },
        {
          "id": "remove",
          "label": "tr-tui-customscript-filebrowser-remove",
          "envVars": {
            "REMOVE_MODE": "auto"
          },
          "skipInputs": "true",
          "requireInstalled": "true",
          "requiresConfirmation": "true"
        }
      ]
    }
  ]
}
