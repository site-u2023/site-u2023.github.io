{
  "categories": [
    {
      "id": "dns-blockers",
      "name": "DNS Blockers",
      "class": "tr-customscript-dns-blockers",
      "description": "DNS-based ad blocking and privacy protection",
      "scripts": [
        {
          "id": "adguardhome",
          "name": "AdGuard Home",
          "class": "tr-tui-customscript-adguardhome",
          "description": "Network-wide ad blocking DNS server",
          "script": "adguardhome.sh",
          "requirements": {
            "minMemoryMB": 50,
            "minFlashMB": 100
          },
          "inputs": [
            {
              "id": "username",
              "type": "text",
              "label": "tr-customscript-username",
              "default": "admin",
              "envVar": "AGH_USER"
            },
            {
              "id": "password",
              "type": "password",
              "label": "tr-customscript-password",
              "minLength": 8,
              "envVar": "AGH_PASS"
            },
            {
              "id": "web_port",
              "type": "number",
              "label": "tr-customscript-web-port",
              "default": "3000",
              "envVar": "WEB_PORT"
            }
          ],
          "options": [
            {
              "id": "openwrt",
              "label": "tr-customscript-install-openwrt",
              "args": "openwrt"
            },
            {
              "id": "official",
              "label": "tr-customscript-install-official",
              "args": "official"
            },
            {
              "id": "remove",
              "label": "tr-customscript-remove",
              "args": "remove auto",
              "skipInputs": true
            }
          ]
        }
      ]
    }
  ]
}
