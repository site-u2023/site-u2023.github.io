{
  "categories": [
    {
      "id": "basic-config",
      "name": "Basic Configuration",
      "description": "Basic system and device configuration",
      "type": "form-section",
      "packages": [
        {
          "id": "aios-language",
          "name": "Language",
          "type": "select",
          "selector": "#aios-language",
          "variableName": "language",
          "defaultValue": "en",
          "options": [
            {"value": "ar", "label": "العربية (Arabic)"},
            {"value": "bg", "label": "Български (Bulgarian)"},
            {"value": "ca", "label": "Català (Catalan)"},
            {"value": "cs", "label": "Čeština (Czech)"},
            {"value": "da", "label": "Dansk (Danish)"},
            {"value": "de", "label": "Deutsch (German)"},
            {"value": "el", "label": "Ελληνικά (Greek)"},
            {"value": "en", "label": "English", "selected": true},
            {"value": "es", "label": "Español (Spanish)"},
            {"value": "fi", "label": "Suomi (Finnish)"},
            {"value": "fr", "label": "Français (French)"},
            {"value": "he", "label": "עברית (Hebrew)"},
            {"value": "hu", "label": "Magyar (Hungarian)"},
            {"value": "it", "label": "Italiano (Italian)"},
            {"value": "ja", "label": "日本語 (Japanese)"},
            {"value": "ko", "label": "한국어 (Korean)"},
            {"value": "lt", "label": "Lietuvių (Lithuanian)"},
            {"value": "ms", "label": "Bahasa Melayu (Malay)"},
            {"value": "nl", "label": "Nederlands (Dutch)"},
            {"value": "no", "label": "Norsk (Norwegian)"},
            {"value": "pl", "label": "Polski (Polish)"},
            {"value": "pt", "label": "Português (Portuguese)"},
            {"value": "pt_br", "label": "Português do Brasil (Portuguese Brazil)"},
            {"value": "ro", "label": "Română (Romanian)"},
            {"value": "ru", "label": "Русский (Russian)"},
            {"value": "sk", "label": "Slovenčina (Slovak)"},
            {"value": "sv", "label": "Svenska (Swedish)"},
            {"value": "tr", "label": "Türkçe (Turkish)"},
            {"value": "uk", "label": "Українська (Ukrainian)"},
            {"value": "vi", "label": "Tiếng Việt (Vietnamese)"},
            {"value": "zh_cn", "label": "简体中文 (Chinese Simplified)"},
            {"value": "zh_tw", "label": "繁體中文 (Chinese Traditional)"}
          ]
        },
        {
          "id": "basic-info-group",
          "name": "Location & Device Information",
          "type": "input-group",
          "fields": [
            {
              "id": "aios-country",
              "label": "Country",
              "type": "text",
              "selector": "#aios-country",
              "variableName": "country",
              "placeholder": "00",
              "maxlength": 2,
              "apiMapping": "country"
            },
            {
              "id": "aios-timezone",
              "label": "Timezone",
              "type": "text",
              "selector": "#aios-timezone",
              "variableName": "timezone",
              "placeholder": "UTC",
              "apiMapping": "timezone"
            }
          ]
        },
        {
          "id": "zone-info-group",
          "name": "Zone Information",
          "type": "input-group",
          "fields": [
            {
              "id": "aios-zonename",
              "label": "Zonename",
              "type": "text",
              "selector": "#aios-zonename",
              "variableName": "zonename",
              "placeholder": "UTC",
              "apiMapping": "zonename"
            },
            {
              "id": "aios-device-name",
              "label": "Device name",
              "type": "text",
              "selector": "#aios-device-name",
              "variableName": "device_name",
              "placeholder": "OpenWrt",
              "defaultValue": ""
            }
          ]
        },
        {
          "id": "security-group",
          "name": "Security Settings",
          "type": "input-group",
          "fields": [
            {
              "id": "aios-root-password",
              "label": "Root password",
              "type": "text",
              "selector": "#aios-root-password",
              "variableName": "root_password",
              "placeholder": "8+ characters",
              "defaultValue": ""
            },
            {
              "id": "aios-lan-ipv4",
              "label": "LAN IPv4 Address",
              "type": "text",
              "selector": "#aios-lan-ipv4",
              "variableName": "lan_ipv4",
              "placeholder": "192.168.1.1",
              "defaultValue": ""
            }
          ]
        },
        {
          "id": "network-group",
          "name": "Network Settings",
          "type": "input-group",
          "fields": [
            {
              "id": "aios-lan-ipv6",
              "label": "LAN IPv6 Address",
              "type": "text",
              "selector": "#aios-lan-ipv6",
              "variableName": "lan_ipv6",
              "placeholder": "fd00::1/64"
            },
            {
              "id": "aios-ssh-interface",
              "label": "SSH Interface",
              "type": "text",
              "selector": "#aios-ssh-interface",
              "variableName": "ssh_interface",
              "placeholder": "lan",
              "defaultValue": "lan",
              "description": "Network interface for SSH access"
            }
          ]
        },
        {
          "id": "ssh-flow-group",
          "name": "SSH & Flow Control",
          "type": "input-group",
          "fields": [
            {
              "id": "aios-ssh-port",
              "label": "SSH Port",
              "type": "number",
              "selector": "#aios-ssh-port",
              "variableName": "ssh_port",
              "placeholder": "22",
              "defaultValue": "",
              "min": 1,
              "max": 65535,
              "description": "Port number for SSH access"
            },
            {
              "id": "aios-flow-offloading",
              "label": "Flow offloading type",
              "type": "select",
              "selector": "#aios-flow-offloading",
              "variableName": "flow_offloading",
              "options": [
                {"value": "", "label": "Disabled", "selected": true},
                {"value": "software", "label": "Software flow offloading"},
                {"value": "hardware", "label": "Hardware flow offloading"}
              ]
            }
          ]
        },
        {
          "id": "backup-group",
          "name": "Backup Settings",
          "type": "input-group",
          "fields": [
            {
              "id": "aios-backup-path",
              "label": "Restore Backup Path",
              "type": "text",
              "selector": "#aios-backup-path",
              "variableName": "backup_path",
              "placeholder": "/root/backup.tar.gz",
              "defaultValue": "/root/backup.tar.gz",
              "description": "Path to backup file for restore"
            }
          ]
        }
      ]
    },
    {
      "id": "wifi-config",
      "name": "Wi-Fi Configuration",
      "description": "Wireless network configuration",
      "type": "form-section",
      "packages": [
        {
          "id": "wifi-mode",
          "name": "Wi-Fi Mode",
          "type": "radio-group",
          "variableName": "wifi_mode",
          "options": [
            {"value": "standard", "label": "Standard", "checked": true},
            {"value": "usteer", "label": "Usteer"},
            {"value": "disabled", "label": "Disabled"}
          ]
        },
        {
          "id": "wifi-options-container",
          "name": "Wi-Fi Options",
          "type": "conditional-section",
          "showWhen": {"field": "wifi_mode", "values": ["standard", "usteer"]},
          "children": [
            {
              "id": "wifi-basic-group",
              "name": "Basic Wi-Fi Settings",
              "type": "input-group",
              "fields": [
                {
                  "id": "aios-wifi-ssid",
                  "label": "Wi-Fi SSID",
                  "type": "text",
                  "selector": "#aios-wifi-ssid",
                  "variableName": "wlan_ssid",
                  "placeholder": "OpenWrt",
                  "defaultValue": "OpenWrt"
                },
                {
                  "id": "aios-wifi-password",
                  "label": "Wi-Fi Password",
                  "type": "text",
                  "selector": "#aios-wifi-password",
                  "variableName": "wlan_password",
                  "placeholder": "8+ characters",
                  "defaultValue": "password"
                }
              ]
            },
            {
              "id": "usteer-options",
              "name": "Usteer Options",
              "type": "conditional-section",
              "showWhen": {"field": "wifi_mode", "values": ["usteer"]},
              "children": [
                {
                  "id": "usteer-group",
                  "name": "Usteer Settings",
                  "type": "input-group",
                  "fields": [
                    {
                      "id": "aios-wifi-mobility-domain",
                      "label": "Mobility Domain",
                      "type": "text",
                      "selector": "#aios-wifi-mobility-domain",
                      "variableName": "mobility_domain",
                      "placeholder": "4f57",
                      "defaultValue": "4f57",
                      "maxlength": 4,
                      "pattern": "[0-9A-Fa-f]{4}",
                      "description": "4-digit hex (e.g. 4f57)"
                    },
                    {
                      "id": "aios-wifi-snr",
                      "label": "Min SNR",
                      "type": "text",
                      "selector": "#aios-wifi-snr",
                      "variableName": "snr",
                      "placeholder": "30 15 5",
                      "defaultValue": "30 15 5",
                      "description": "SNR values in band order"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "internet-config",
      "name": "Internet Connection",
      "description": "Configure your internet connection type",
      "type": "form-section",
      "packages": [
        {
          "id": "connection-type",
          "name": "Connection type",
          "type": "radio-group",
          "variableName": "connection_type",
          "options": [
            {"value": "auto", "label": "AUTO", "checked": true},
            {"value": "dhcp", "label": "DHCP"},
            {"value": "pppoe", "label": "PPPoE"},
            {"value": "dslite", "label": "DS-Lite"},
            {"value": "mape", "label": "MAP-E"},
            {"value": "ap", "label": "AP"}
          ]
        },
        {
          "id": "auto-section",
          "name": "AUTO Detection",
          "type": "conditional-section",
          "showWhen": {"field": "connection-type", "values": ["auto"]},
          "children": [
            {
              "id": "auto-info",
              "name": "Auto Detection Information",
              "type": "info-display",
              "content": "Detecting connection type..."
            }
          ]
        },
        {
          "id": "dhcp-section",
          "name": "DHCP",
          "type": "conditional-section",
          "showWhen": {"field": "connection-type", "values": ["dhcp"]},
          "children": [
            {
              "id": "dhcp-info",
              "name": "DHCP Information",
              "type": "info-display",
              "content": "DHCP configuration will be applied automatically."
            }
          ]
        },
        {
          "id": "pppoe-section",
          "name": "PPPoE",
          "type": "conditional-section",
          "showWhen": {"field": "connection-type", "values": ["pppoe"]},
          "children": [
            {
              "id": "pppoe-group",
              "name": "PPPoE Credentials",
              "type": "input-group",
              "fields": [
                {
                  "id": "pppoe-username",
                  "label": "Username",
                  "type": "text",
                  "selector": "#pppoe-username",
                  "variableName": "pppoe_username",
                  "placeholder": "Username"
                },
                {
                  "id": "pppoe-password",
                  "label": "Password",
                  "type": "password",
                  "selector": "#pppoe-password",
                  "variableName": "pppoe_password",
                  "placeholder": "Password"
                }
              ]
            }
          ]
        },
        {
          "id": "dslite-section",
          "name": "DS-Lite",
          "type": "conditional-section",
          "showWhen": {"field": "connection-type", "values": ["dslite"]},
          "children": [
            {
              "id": "dslite-aftr",
              "label": "AFTR Type",
              "type": "select",
              "selector": "#dslite-aftr",
              "variableName": "dslite_aftr_type",
              "options": [
                {"value": "transix", "label": "gw.transix.jp"},
                {"value": "xpass", "label": "gw.xpass.jp"},
                {"value": "v6option", "label": "gw.v6option.jp"}
              ]
            },
            {
              "id": "dslite-region",
              "label": "Region",
              "type": "select",
              "selector": "#dslite-region",
              "variableName": "dslite_region",
              "options": [
                {"value": "east", "label": "East Japan"},
                {"value": "west", "label": "West Japan"}
              ]
            },
            {
              "id": "dslite-aftr-address",
              "label": "AFTR IPv6 Address",
              "type": "text",
              "selector": "#dslite-aftr-address",
              "variableName": "dslite_aftr_address",
              "placeholder": "2404:8e00::feed:100",
              "defaultValue": "2404:8e00::feed:100",
              "apiMapping": "aftr"
            }
          ]
        },
        {
          "id": "mape-section",
          "name": "MAP-E",
          "type": "conditional-section",
          "showWhen": {"field": "connection-type", "values": ["mape"]},
          "children": [
            {
              "id": "mape-type",
              "name": "Type",
              "type": "radio-group",
              "variableName": "mape_type",
              "options": [
                {"value": "gua", "label": "GUA", "checked": true},
                {"value": "pd", "label": "PD"}
              ]
            },
            {
              "id": "mape-basic-group",
              "name": "MAP-E Basic Settings",
              "type": "input-group",
              "fields": [
                {
                  "id": "mape-br",
                  "label": "BR",
                  "type": "text",
                  "selector": "#mape-br",
                  "variableName": "mape_br",
                  "placeholder": "2001:db8::1",
                  "apiMapping": "mape.brIpv6Address"
                },
                {
                  "id": "mape-ealen",
                  "label": "EA-len",
                  "type": "number",
                  "selector": "#mape-ealen",
                  "variableName": "mape_ealen",
                  "placeholder": "16",
                  "apiMapping": "mape.eaBitLength"
                }
              ]
            },
            {
              "id": "mape-ipv4-group",
              "name": "IPv4 Settings",
              "type": "input-group",
              "fields": [
                {
                  "id": "mape-ipv4-prefix",
                  "label": "IPv4 Prefix",
                  "type": "text",
                  "selector": "#mape-ipv4-prefix",
                  "variableName": "mape_ipv4_prefix",
                  "placeholder": "",
                  "apiMapping": "mape.ipv4Prefix"
                },
                {
                  "id": "mape-ipv4-prefixlen",
                  "label": "IPv4 Prefix Length",
                  "type": "number",
                  "selector": "#mape-ipv4-prefixlen",
                  "variableName": "mape_ipv4_prefixlen",
                  "placeholder": "24",
                  "apiMapping": "mape.ipv4PrefixLength"
                }
              ]
            },
            {
              "id": "mape-ipv6-group",
              "name": "IPv6 Settings",
              "type": "input-group",
              "fields": [
                {
                  "id": "mape-ipv6-prefix",
                  "label": "IPv6 Prefix",
                  "type": "text",
                  "selector": "#mape-ipv6-prefix",
                  "variableName": "mape_ipv6_prefix",
                  "placeholder": "",
                  "apiMapping": "mape.ipv6Prefix"
                },
                {
                  "id": "mape-ipv6-prefixlen",
                  "label": "IPv6 Prefix Length",
                  "type": "number",
                  "selector": "#mape-ipv6-prefixlen",
                  "variableName": "mape_ipv6_prefixlen",
                  "placeholder": "32",
                  "apiMapping": "mape.ipv6PrefixLength"
                }
              ]
            },
            {
              "id": "mape-psid-group",
              "name": "PSID Settings",
              "type": "input-group",
              "fields": [
                {
                  "id": "mape-psid-offset",
                  "label": "PSID Offset",
                  "type": "number",
                  "selector": "#mape-psid-offset",
                  "variableName": "mape_psid_offset",
                  "placeholder": "6",
                  "apiMapping": "mape.psIdOffset"
                },
                {
                  "id": "mape-psidlen",
                  "label": "PSID Length",
                  "type": "number",
                  "selector": "#mape-psidlen",
                  "variableName": "mape_psidlen",
                  "placeholder": "6",
                  "apiMapping": "mape.psidlen"
                }
              ]
            },
            {
              "id": "mape-gua-prefix-section",
              "name": "GUA Prefix Settings",
              "type": "conditional-section",
              "showWhen": {"field": "mape-type", "values": ["gua"]},
              "children": [
                {
                  "id": "mape-gua-prefix",
                  "label": "GUA Prefix",
                  "type": "text",
                  "selector": "#mape-gua-prefix",
                  "variableName": "mape_gua_prefix",
                  "placeholder": "",
                  "apiMapping": "mape.ipv6PrefixWith64"
                }
              ]
            }
          ]
        },
        {
          "id": "ap-section",
          "name": "AP Mode",
          "type": "conditional-section",
          "showWhen": {"field": "connection-type", "values": ["ap"]},
          "children": [
            {
              "id": "ap-group",
              "name": "AP Network Settings",
              "type": "input-group",
              "fields": [
                {
                  "id": "ap-ip-address",
                  "label": "IP Address",
                  "type": "text",
                  "selector": "#ap-ip-address",
                  "variableName": "ap_ip_address",
                  "placeholder": "192.168.1.2",
                  "defaultValue": "192.168.1.2"
                },
                {
                  "id": "ap-gateway",
                  "label": "Gateway",
                  "type": "text",
                  "selector": "#ap-gateway",
                  "variableName": "ap_gateway",
                  "placeholder": "192.168.1.1",
                  "defaultValue": "192.168.1.1"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "tuning-config",
      "name": "Tuning",
      "description": "System performance and network optimization",
      "type": "form-section",
      "packages": [
        {
          "id": "net-optimizer",
          "name": "Dynamic Network Optimizer",
          "type": "radio-group",
          "variableName": "net_optimizer",
          "options": [
            {"value": "auto", "label": "AUTO", "checked": true},
            {"value": "manual", "label": "Manual"},
            {"value": "disabled", "label": "Disabled"}
          ]
        },
        {
          "id": "netopt-auto-section",
          "name": "AUTO Mode",
          "type": "conditional-section",
          "showWhen": {"field": "net-optimizer", "values": ["auto"]},
          "children": [
            {
              "id": "netopt-auto-info",
              "name": "Auto Optimization",
              "type": "info-display",
              "content": "Auto mode adjusts parameters based on system resources"
            }
          ]
        },
        {
          "id": "netopt-manual-section",
          "name": "Manual Mode",
          "type": "conditional-section",
          "showWhen": {"field": "net-optimizer", "values": ["manual"]},
          "children": [
            {
              "id": "netopt-memory-group",
              "name": "TCP Memory Settings",
              "type": "input-group",
              "fields": [
                {
                  "id": "netopt-rmem",
                  "label": "TCP Read Memory",
                  "type": "text",
                  "selector": "#netopt-rmem",
                  "variableName": "netopt_rmem",
                  "placeholder": "4096 131072 8388608",
                  "defaultValue": "4096 131072 8388608",
                  "description": "min default max (bytes)"
                },
                {
                  "id": "netopt-wmem",
                  "label": "TCP Write Memory",
                  "type": "text",
                  "selector": "#netopt-wmem",
                  "variableName": "netopt_wmem",
                  "placeholder": "4096 131072 8388608",
                  "defaultValue": "4096 131072 8388608",
                  "description": "min default max (bytes)"
                }
              ]
            },
            {
              "id": "netopt-connection-group",
              "name": "Connection Settings",
              "type": "input-group",
              "fields": [
                {
                  "id": "netopt-conntrack",
                  "label": "Connection Tracking Max",
                  "type": "number",
                  "selector": "#netopt-conntrack",
                  "variableName": "netopt_conntrack",
                  "placeholder": "131072",
                  "defaultValue": "131072",
                  "min": 1024
                },
                {
                  "id": "netopt-backlog",
                  "label": "Network Device Backlog",
                  "type": "number",
                  "selector": "#netopt-backlog",
                  "variableName": "netopt_backlog",
                  "placeholder": "5000",
                  "defaultValue": "5000",
                  "min": 100
                }
              ]
            },
            {
              "id": "netopt-socket-group",
              "name": "Socket Settings",
              "type": "input-group",
              "fields": [
                {
                  "id": "netopt-somaxconn",
                  "label": "Socket Max Connections",
                  "type": "number",
                  "selector": "#netopt-somaxconn",
                  "variableName": "netopt_somaxconn",
                  "placeholder": "16384",
                  "defaultValue": "16384",
                  "min": 128
                },
                {
                  "id": "netopt-congestion",
                  "label": "TCP Congestion Control",
                  "type": "select",
                  "selector": "#netopt-congestion",
                  "variableName": "netopt_congestion",
                  "options": [
                    {"value": "cubic", "label": "cubic (default)", "selected": true},
                    {"value": "bbr", "label": "bbr"},
                    {"value": "reno", "label": "reno"}
                  ]
                }
              ]
            }
          ]
        },
        {
          "id": "netopt-disabled-section",
          "name": "Disabled Mode",
          "type": "conditional-section",
          "showWhen": {"field": "net-optimizer", "values": ["disabled"]},
          "children": [
            {
              "id": "netopt-disabled-info",
              "name": "Optimization Disabled",
              "type": "info-display",
              "content": "Network optimization will be disabled"
            }
          ]
        }
      ]
    }
  ]
}
